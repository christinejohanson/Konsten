@model IEnumerable<Konsten.Models.Artwork>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Konstverk i galleriet</h1>

<p>
    <a asp-action="Create">Skapa nytt konstverk</a>
</p>
<p>
    <a asp-controller="ArtistName" asp-action="Index">Administrera konstn√§rer</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ArtistName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArtName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArtYear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArtTechnique)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArtPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArtWidth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArtHeight)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.AltText)
                </th>

                <th>
                    Uppladdad bild:
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArtistName.TheArtist)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArtName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArtYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArtTechnique)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArtPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArtWidth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArtHeight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AltText)
                    </td>

                    <td class="col-sm-10">
                        <img decoding="async" src="@("~/imageupload/"+item.ImageName)" asp-append-version="true" width="400"
                        height="300" alt="@Html.DisplayFor(modelItem => item.AltText)" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Redigera</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Radera</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
